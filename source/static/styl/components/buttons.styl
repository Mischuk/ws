// Mobile burger button
.mobile-menu
  anim()
  display block
  position absolute
  z-index 10
  left 15px
  top 50%
  width auto
  height 40px
  margin-top -(@height/2)
  cursor pointer
  border none
  background none
  padding-left 35px
  @media screen and (min-width: 992px)
    display none
  &:after,
  &:before,
  span
    anim()
    content ''
    position absolute
    left 0
    width 25px
    margin-left 0
    height 4px
    background $green
    border-radius $radius
  &:before
    top 10px
  &:after
    bottom 10px
  span
    top 50%
    margin-top -1.5px
  i
    font-style normal
    font-weight bold
    font-size 16px
.bottom-header.is-opened .mobile-menu
  color #fff
  span,
  &:after,
  &:before
    background #fff
  span
    opacity 0
    transform translateX(-5px)
  &:after
    transform rotate(135deg) translate(-6px, 6px)
  &:before
    transform rotate(-135deg) translate(-5px, -5px)

.button
  anim()
  display inline-block
  vertical-align middle
  text-transform uppercase
  padding 9px 15px
  border-radius $radius
  font-size 12px
  line-height 12px
  background $green
  color #fff
  font-weight bold
  @media LG
    padding 14px 25px
    font-size 14px
  &:hover
    background $orange
  &:active
    background $orange - 5%

.button-border
  transition background 0.3s cubic-bezier(.33,.66,.66,1), color 0.3s cubic-bezier(.33,.66,.66,1)
  position relative
  font-weight bold
  font-size 14px
  display inline-block
  vertical-align middle
  color #fff
  text-transform uppercase
  border 2px solid #fff
  border-radius $radius
  padding 10px 35px
  overflow hidden
  box-shadow 1px 1px 2px rgba(0,0,0,.5)
  &:hover
    color $blue
    background #fff
  &:active
    color $blue - 50%
    box-shadow 0 1px 1px -1px rgba(0,0,0,.75)
.button-white
  transition background 0.3s cubic-bezier(.33,.66,.66,1), color 0.3s cubic-bezier(.33,.66,.66,1)
  position relative
  font-weight bold
  font-size 14px
  display inline-block
  vertical-align middle
  color #fff
  text-transform uppercase
  border 2px solid #fff
  border-radius $radius
  padding 20px 60px
  overflow hidden
  box-shadow 0 8px 15px rgba(0,0,0,.14)
  background #fff
  color $blue
  &:hover
    color $blue
    background #fff
    box-shadow 0 4px 7px rgba(0,0,0,.14)
  &:active
    position relative
    top 1px
    color $blue - 50%
    box-shadow 0 1px 1px rgba(0,0,0,.64)

.button-border-green
  transition background 0.3s cubic-bezier(.33,.66,.66,1), color 0.3s cubic-bezier(.33,.66,.66,1)
  position relative
  font-weight bold
  font-size 14px
  display inline-block
  vertical-align middle
  color #fff
  text-transform uppercase
  border 1px solid $green
  border-radius $radius
  padding 10px 35px
  overflow hidden
  background #fff
  color $green
  &:hover
    color #fff
    background $green
  &:active
    background $green - 15%
.excerpt-button
  font-size 14px
  color $blue
  text-decoration underline
  &:hover
    color #111
    text-decoration none
.mfp-arrow
  margin-top -10px
  &:active
    margin-top -10px
.mfp-arrow-left,
.mfp-arrow-right
  width 12px
  height 20px
  &:before,
  &:after
    display none
.mfp-arrow-left
  left 30px
  background: url('../images/sprite.png') no-repeat -200px -50px !important
  retina()
  &:hover
    background-position -200px -100px !important
.mfp-arrow-right
  right 30px
  background: url('../images/sprite.png') no-repeat -250px -50px !important
  retina()
  &:hover
    background-position -250px -100px !important
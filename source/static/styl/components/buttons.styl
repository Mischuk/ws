// Mobile burger button
.mobile-menu
  anim()
  display block
  position absolute
  z-index 10
  left 15px
  top 50%
  width auto
  height 40px
  margin-top -(@height/2)
  cursor pointer
  border none
  background none
  padding-left 35px
  @media screen and (min-width: 992px)
    display none
  &:after,
  &:before,
  span
    anim()
    content ''
    position absolute
    left 0
    width 25px
    margin-left 0
    height 4px
    background $green
    border-radius $radius
  &:before
    top 10px
  &:after
    bottom 10px
  span
    top 50%
    margin-top -1.5px
  i
    font-style normal
    font-weight bold
    font-size 16px
.bottom-header.is-opened .mobile-menu
  color #fff
  span,
  &:after,
  &:before
    background #fff
  span
    opacity 0
    transform translateX(-5px)
  &:after
    transform rotate(135deg) translate(-6px, 6px)
  &:before
    transform rotate(-135deg) translate(-5px, -5px)

.button
  anim()
  display inline-block
  vertical-align middle
  text-transform uppercase
  padding 9px 15px
  border-radius $radius
  font-size 12px
  line-height 12px
  background $green
  color #fff
  font-weight bold
  @media LG
    padding 14px 25px
    font-size 14px
  &:hover
    background $orange
  &:active
    background $orange - 5%


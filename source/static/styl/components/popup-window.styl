.popup-window
  position relative
  max-width 470px
  margin 0 auto
  padding 20px 30px
  background #fff
  @media MD
    padding 30px 40px
  .social-share
    > span,
    > .ya-share2
      display inline-block
      vertical-align middle
  .popup-title
    font-weight bold
    color #111
    font-size 24px
    text-transform uppercase
    padding-bottom 20px
  .selected-project
    margin-bottom 30px
    padding-bottom 30px
    border-bottom 1px solid #c8c8c8
    .title
      display inline-block
      vertical-align top
      width 70%
      padding-left 10px
      a
        font-size 14px
        color $blue
        text-decoration underline
        &:hover
          color #111
          text-decoration none
    .image
      display inline-block
      vertical-align middle
      width 100px
      a
        display block
        img
          width 100%
          height auto

  form
    .form-row
      & + .form-row
        margin-top 20px
    .submit
      border none
    input
      height 50px
      line-height 50px
    input,
    textarea
      border 1px solid #c8c8c8
      font-size 16px
      width 100%
      padding 0 10px
      border-radius $radius
      font-family 'PT Sans', 'Arial', sans-serif
      &:focus
        border-color $green
    textarea
      padding 5px 10px
      min-height 110px
      resize none
    .input-file
      input[type="file"]
        opacity 0
        display none
      .inp-btn
        anim()
        position relative
        display inline-block
        vertical-align middle
        border 1px solid $green
        color #494846
        font-size 16px
        padding 0 30px 0 40px
        height 50px
        line-height 48px
        border-radius $radius
        cursor pointer
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -200px -200px;
          width: 20px;
          height: 20px;
          position absolute
          left 10px
          top 50%
          margin-top -(@height/2)
          retina()
        &:hover
          background $green
          color #fff
          &:after
            background-position -200px -250px
      .inp-lbl
        color #494846
        font-size 14px
        display inline-block
        vertical-align middle
        padding-left 15px
      .inp-file-result
        line-height 30px
        .filename
          display inline-block
          vertical-align middle
        a.remove-attached
          display inline-block
          vertical-align middle
          color red
          margin-left 5px
    .label
      font-size 16px
      margin-bottom 5px
    .checkboxes
      .item
        display inline-block
        vertical-align middle
        margin-right 20px
        label
          cursor pointer
          display inline-block
          vertical-align middle
          user-select-none()
        input[type="radio"]
          display none
        .check-icon
          width 20px
          height 20px
          border 1px solid $green
          border-radius 50%
          display inline-block
          vertical-align middle
        .check-label
          display inline-block
          vertical-align middle
          font-size 16px
          line-height 20px
          color #494846
          padding-left 5px
        input[type="radio"]:checked
          & + .check-icon
            box-shadow inset 0 0 0 4px white
            background $green
.webui-popover  
  background #328ccc
  background rgba(50, 140, 204, .95)
  border none
  color #fff
  font-size 16px
  line-height 24px
  @media screen and (max-width: 420px)
    left 2% !important
    width 96% !important
  img
    max-width 100%
  p:last-child
    margin-bottom 0
  a
    color #fff
    text-decoration underline
    &:hover
      text-decoration none
.webui-popover.top>.webui-arrow:after, 
.webui-popover.top-right>.webui-arrow:after, 
.webui-popover.top-left>.webui-arrow:after
  border-top-color rgba(50, 140, 204, .95)


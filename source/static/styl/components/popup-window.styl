#webuiPopover2,
#webuiPopover4,
#webuiPopover6,
#webuiPopover8
  @media screen and (max-width: 479px) and (min-width: 420px)
    left 2% !important
  .webui-arrow
    @media screen and (max-width: 479px)
      left 26% !important
    @media screen and (min-width: 420px) and (max-width: 479px)
      left 29% !important
  

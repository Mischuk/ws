$footer = 300px
$footerLarge = 470px

html
  position relative
  min-height 100%
body
  font-family 'PT Sans', sans-serif
  font-size 18px
  line-height 1.2
  margin-bottom $footer + 30
  background #fff
  @media MD
    margin-bottom $footerLarge + 30
footer
  height $footer
  @media MD
    height $footerLarge
.wrapper
  clearfix()
  position relative
  max-width $wrapper
  height 100%
  padding-left 15px
  padding-right 15px
  margin-left auto
  margin-right auto

.bg-layout
  anim()
  left 0
  top 0
  width 100%
  height 100%
  background #000
  opacity 0
  position static
  &.is-active
    position absolute
    opacity .5
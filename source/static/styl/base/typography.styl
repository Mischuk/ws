h1, h2, h3, h4, h5, h6
  line-height 1.2
  font-weight bold
h1
  font-size 36px
h2
  font-size 30px
h3
  font-size 24px
h4
  font-size 18px
h5
  font-size 14px
h6
  font-size 12px

p
  margin-top 0
  margin-bottom 20px

.section-title
  margin-bottom 15px
  margin-top 15px
  @media screen and (min-width: 480px)
    position relative
    padding-right 130px
  &.border
    @media SM
      padding-bottom 30px
      border-bottom 1px solid $green
  h2
    font-size 30px
    line-height 0.8
    @media screen and (min-width: 480px)
      line-height 1
    @media LG
      font-size 36px
  .details
    position absolute
    right 15px
    bottom 0px
    width 105px
    height 30px
    z-index 1
    @media screen and (min-width: 480px)
      bottom 0
      top 50%
      margin-top -15px
      right 0
    a
      anim()
      display inline-block
      vertical-align middle
      color #88b000
      border 1px solid #88b000
      border-radius $radius
      font-size 14px
      width 105px
      height 30px
      line-height 28px
      text-align center
      &:hover
        background #88b000
        color #fff
      &:active
        background #88b000 - 15%

article
  p
    font-size 14px
    line-height 20px
    color #494846
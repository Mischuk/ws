.m_events-item
  border-top 1px solid #dcdcdc
  padding-top 25px
  margin-top 25px
  position relative
  @media SM
    clearfix()
    height 275px
  &:last-child
    padding-bottom 25px
    border-bottom 1px solid #dcdcdc
    margin-bottom 25px
  .image
    height 200px
    @media screen and (min-width: 480px)
      height 275px
    @media SM
      float left
      width 42%
      height 100%
    a
      display block
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50%
      background-size cover
  .desc
    @media SM
      float right
      width 58%
      height 100%
      padding-left 25px
      position relative
  .date
    background #f78c0c
    color #fff
    text-transform uppercase
    font-size 12px
    display inline-block
    vertical-align middle
    padding 5px
    margin-bottom 10px
    position absolute
    left 0
    top 25px
    @media SM
      margin-top 0
      position static
  .title
    margin-bottom 10px
    margin-top 10px
    @media SM
      margin-top 0
    a
      display inline-block
      vertical-align middle
      font-weight bold
      font-size 20px
      line-height 30px
      color $blue
      text-decoration underline
      text-transform uppercase
      @media LG
        font-size 24px
        line-height 34px
      &:hover
        color #111
        text-decoration none
  .lead
    color #494846
    font-size 16px
    line-height 24px
    margin-bottom 20px
  .details
    @media SM
      position absolute
      left 25px
      bottom 0
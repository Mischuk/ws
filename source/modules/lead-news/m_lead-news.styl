.m_lead-news
  background #fcf7f1
  .item
    position relative
  .info
    margin-bottom 30px
    @media screen and (min-width: 480px)
      padding-left 120px
    @media SM
      padding-left 0
      padding-top 120px
    @media MD
      padding-left 120px
      padding-top 0
  .image
    position absolute
    left 0
    top 0
    width 100px
    height 100px
    display none
    @media screen and (min-width: 480px)
      display block
    a,
    img
      display block
      max-width 100%
      width 100%
      height 100%
  .post-date
    color #494846
    font-size 14px
    margin-bottom 5px
  .title
    margin-bottom 5px
    a
      font-weight bold
      color $blue
      font-size 14px
      text-transform uppercase
      display inline-block
      vertical-align middle
      text-decoration underline
      &:hover
        color #111
        text-decoration none
  .desc
    font-size 14px
    line-height 20px
    color #494846
.m_project-card-tabs
  background #fff
  .remark
    font-size 16px
    color #494846
    margin-bottom 15px
  .project-card-tabs-nav
    position relative
    top 1px
    a
      display inline-block
      vertical-align middle
      font-weight bold
      line-height 24px
      color #807e7b
      text-transform uppercase
      margin-top 15px
      border 1px solid #dcdcdc
      font-size 14px
      padding 10px 20px
      @media screen and (min-width: 640px)
        border-radius $radius $radius 0 0
      @media SM
        font-size 16px
        padding 15px 30px
        margin-right 10px
      &:hover,
      &.current
        background $blue
        color #fff
        border-color $blue
  .project-card-tabs-content
    border 1px solid #dcdcdc
    margin-top 15px
    @media screen and (min-width: 640px)
      margin-top 0
    section
      display none
      &.current
        display block
        @media screen and (max-width: 1200px)
          padding 30px
    .table-row
      overflow auto
      padding 40px 30px
      @media screen and (max-width: 1200px)
        padding 15px 0
      table.lead
        min-width 1100px
        width 100%
        b
          font-size 16px
          text-transform uppercase
        th, td
          border 1px solid #dcdcdc
          &.no-border
            border none
            background none !important
          &.right
            text-align right
            padding-right 20px
            color #111
        td
          text-align center
          font-size 14px
          color #494846
          padding 10px
        th
          padding 10px
          text-transform uppercase
        tr:nth-child(even)
          td
            background #fcf7f1
        .order
          anim()
          display inline-block
          vertical-align middle
          text-transform uppercase
          padding 9px 15px
          border-radius $radius
          font-size 12px
          line-height 12px
          background $orange
          color #fff
          font-weight bold
          &:hover
            background $orange - 5%
          &:active
            background $orange - 10%
      .table-notes
        padding-top 15px
        padding-left 200px
        min-width 800px
        p
          margin-bottom 0
          color #494846
          font-size 14px
      .table
        width 100%
        text-align center
        min-width 1100px
        .order
          anim()
          display inline-block
          vertical-align middle
          text-transform uppercase
          padding 9px 0
          border-radius $radius
          font-size 12px
          line-height 12px
          background $orange
          color #fff
          font-weight bold
          width 90%
          &:hover
            background $orange - 5%
          &:active
            background $orange - 10%
        td, th
          border 1px solid #dcdcdc
          &.no-border
            border none
          &.no-border-bottom
            border-bottom none
            line-height 30px
            span
              display inline-block
              vertical-align middle
              position relative
              top 15px
              font-size 16px
              font-weight bold
        th
          text-transform uppercase
        td
          padding 15px
          font-size 14px
          min-width 70px
          max-width 70px
          &:first-child
            text-align left
            min-width 680px
            max-width 680px
        tr:nth-child(2n+3)
          background #fcf7f1
        tr.buttons
          background none
          td
            background none
            padding 15px 0
        .table-header
          .no-border
            border-left 1px solid #dcdcdc
          span
            display inline-block
            vertical-align middle
            line-height 30px
            font-size 14px
            padding-left 5px
            padding-right 5px
            font-size 12px
          td
            padding 0
            font-size 14px
            line-height 30px
        .yes
          display inline-block
          vertical-align middle
          width 16px
          height 13px
          background url("../images/table-check.png") no-repeat 0 0
        .no
          display inline-block
          vertical-align middle
          width 21px
          height 5px
          background url("../images/table-del.png") no-repeat 0 0
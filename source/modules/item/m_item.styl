.m_item
  .image
    height 200px
    @media screen and (min-width: 480px)
      height 150px
    @media MD
      height 180px
    a
      anim()
      display block
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50%
      background-size cover
      &:hover
        box-shadow inset 0 0 250px 50px rgba(0,0,0,.7)
      &.video
        position relative
        &:before
          content ''
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          background rgba(0,0,0,.5)
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -100px -100px;
          width: 40px;
          height: 32px;
          position absolute
          left 50%
          top 50%
          margin-left -(@width/2)
          margin-top -(@height/2)
          retina()
        &:hover
          &:after
            background-position -100px -150px
  .bottom
    margin-bottom 30px
    @media MD
      margin-bottom 0
    .title
      line-height 1
      display block
      font-size 14px
      margin 10px 0
      a
        color $blue
        font-size 14px
        line-height 1.4
        display inline-block
        vertical-align middle
        text-decoration underline
        font-weight bold
        text-transform uppercase
        &:hover
          color #111
          text-decoration none
    .desc
      font-size 14px
      line-height 20px
      color #494846
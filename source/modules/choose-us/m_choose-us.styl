.m_choose-us
  position relative
  background #fcf7f1
  padding 20px 0
  margin-bottom 30px
  .list
    @media MD
      padding-left 220px
    @media LG
      padding-left 300px
  .title
    position relative
    font-weight bold
    color #111
    font-size 18px
    text-transform uppercase
    @media screen and (min-width: 480px)
      font-size 24px
    @media MD
      position absolute
      left 10px
      top 70px
      font-size 36px
    @media LG
      left 50px
    span
      position relative
      display inline-block
      vertical-align middle
      padding-bottom 10px
      margin-bottom 10px
      &:after
        content ''
        height 3px
        background $blue
        width 60%
        position absolute
        left 0
        bottom 0

    br
      display none
      @media MD
        display block
  .item
    position relative
    @media screen and (min-width: 500px)
      display inline-block
      vertical-align top
      width 49%
    .icon
      position absolute
      left 0
      top 50%
    .desc
      display table
      padding-left 80px
      font-weight bold
      font-size 14px
      text-transform uppercase
      color #111
      height 110px
      span
        display table-cell
        vertical-align middle
    &:nth-child(1)
      .icon
        width 74px
        height 70px
        margin-top -35px
        background url("../images/choose-us/1.png") no-repeat 0 0
        @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
          background-image url("../images/choose-us/1@2x.png")
          background-size 100%
    &:nth-child(2)
      .icon
        width 70px
        height 70px
        margin-top -35px
        background url("../images/choose-us/2.png") no-repeat 0 0
        @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
          background-image url("../images/choose-us/2@2x.png")
          background-size 100%
    &:nth-child(3)
      .icon
        width 70px
        height 70px
        margin-top -35px
        background url("../images/choose-us/3.png") no-repeat 0 0
        @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
          background-image url("../images/choose-us/3@2x.png")
          background-size 100%
    &:nth-child(4)
      .icon
        width 65px
        height 70px
        margin-top -35px
        background url("../images/choose-us/4.png") no-repeat 0 0
        @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
          background-image url("../images/choose-us/4@2x.png")
          background-size 100%
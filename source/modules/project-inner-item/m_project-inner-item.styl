.m_project-inner-item
  position relative
  border 1px solid #e6e6e6
  .image
    height 180px
    a
      display block
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50%
      background-size cover
  .square
    background $blue
    color #fff
    border-radius $radius
    padding 5px
    display inline-block
    vertical-align middle
    font-size 14px
    position absolute
    left 10px
    top 145px
    z-index 1
    cursor default
  .recommended
    background #ffcc00
    color #111
    position absolute
    left 10px
    top 10px
    font-size 12px
    font-weight bold
    border-radius $radius
    padding 5px
    cursor default
    text-transform uppercase
  .desc
    padding 15px
    .title
      display block
      line-height 14px
      height 30px
      overflow hidden
      margin-bottom 10px
      a
        color $blue
        font-size 14px
        text-decoration underline
        text-transform uppercase
        font-weight bold
        &:hover
          color #111
          text-decoration none
    .details
      padding-top 15px
    .row
      font-size 14px
      color #494846
      & + .row
        margin-top 15px
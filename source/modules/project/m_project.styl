.m_project
  margin-top -25px
  .page-title
    clearfix()
    padding-bottom 15px
    border-bottom 1px solid #dcdcdc
    margin-bottom 15px
    .project-info
      clearfix()
      @media screen and (min-width: 1200px)
        float left
        width 55%
      h2
        @media screen and (min-width: 480px)
          float left
          width 50%
      .view-complex
        display block
        margin-top 15px
        background #0070c0
        color #fff
        border-radius 5px
        font-size 16px
        text-transform uppercase
        text-align center
        font-weight bold
        padding 10px
        @media screen and (min-width: 480px)
          float right
          width 50%
          margin-top 0
        @media screen and (min-width: 568px)
          max-width 240px
        &:hover
          background #0070c0 -25%
    .projects-nav
      @media screen and (min-width: 1200px)
        float left
        width 45%
        padding-top 0
        padding-left 20px
      .backward
        float left
        margin-bottom 4%
        width 100%
        text-align center
        @media screen and (min-width: 480px)
          width 31%
          margin-right 3.5%
          margin-bottom 0
      .next, .prev
        float left
        width 48%
        text-align center
        @media screen and (min-width: 480px)
          width 31%
      .prev
        margin-right 4%
        @media screen and (min-width: 480px)
          margin-right 3.5%
  .m_article-footer
    border-top none
    .social-share
      float none
  .m_steps
    border-top none
    border-bottom none
  .download-complex
    margin-top 15px
    text-align right
    a
      display inline-block
      vertical-align middle
      color $blue
      border 1px solid $blue
      font-size 14px
      padding-left 35px
      padding-right 15px
      padding-top 10px
      padding-bottom 10px
      border-radius 5px
      background url('../images/download.png') no-repeat 15px 50%
      &:hover
        background-color $blue
        background-image url('../images/download-h.png')
        color #fff
.m_lead-map
  position relative
  height auto
  margin-bottom -30px
  margin-top 30px
  @media MD
    height 400px
  #map
    left 0
    top 0
    width 100%
    height 300px
    @media screen and (min-width: 568px)
      height 375px
    @media MD
      height 400px
  .contacts
    width 100%
    background #fff
    right 15px
    top 50%
    box-shadow 0 10px 29px rgba(0,0,0,0.2)
    padding 30px 15px
    color #494846
    font-size 14px
    @media screen and (min-width: 568px)
      position absolute
      right 15px
      top 50px
      z-index 1
      width 220px
    @media MD
      width 300px
    @media LG
      right 50%
      margin-right -585px
    .locate
      font-size 16px
      font-weight bold
      text-transform uppercase
      margin-bottom 15px
    .row
      & + .row
        margin-top 20px
      span
        display inline-block
        vertical-align middle
    .button
      // width 100%
      text-align center
      padding 15px 30px
      font-size 14px
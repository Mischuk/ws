.m_footer
  position absolute
  left 0
  bottom 0
  width 100%
  background #fff
  color $light
  font-size 14px
  padding-top 30px
  border-top 1px solid #dcdcdc
  @media MD
    padding-top 45px
  .column
    @media MD
      float left
      width 25%
      padding-right 30px
    & + .column
      display none
      @media MD
        display block
      @media LG
        padding-left 60px
  .title
    font-weight bold
    text-transform uppercase
    color $dark
    height 30px
  ul
    a
      display inline-block
      vertical-align middle
      padding 5px 0
      color $link
      text-decoration underline
      &:hover
        color #000
        text-decoration none
  .copyright
    color $dark
    margin-bottom 5px
  .phones
    margin 20px 0
    .value
      font-weight bold
      color $dark
  .sharing
    margin-bottom 15px
  .global-search
    position relative
    input
      trs(border-color)
      border 2px solid #c8c8c8
      border-radius $radius
      font-size 16px
      padding 10px 35px 10px 15px
      width 100%
      max-width 200px
      &:focus
        border-color $green
    button
      position absolute
      left 168px
      top 2px
      width 30px
      height 38px
      border none
      background url("../images/search.png") no-repeat 50%
      text-indent -9999px
      font-size 0
      @media only screen and (-webkit-min-device-pixel-ratio: 2), only screen and (min-device-pixel-ratio: 2)
        background-image url("../images/search@2x.png")
        background-size 16px
  .developed
    position absolute
    left 15px
    bottom 15px
    @media MD
      bottom 65px
    a
      color $link
      text-decoration underline
      &:hover
        color #000
        text-decoration none
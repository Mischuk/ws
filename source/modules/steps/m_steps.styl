.m_steps
  border-top 1px solid #dcdcdc
  border-bottom 1px solid #dcdcdc
  margin-top 30px
  margin-bottom 30px
  .list
    clearfix()
    text-align center
    margin-top 30px
  .item
    display inline-block
    vertical-align top
    width 49%
    text-align center
    @media screen and (min-width: 480px)
      width 32%
    @media SM
      width 19.4%
    & + .item
      @media screen and (min-width: 480px)
        position relative
        &:after
          content ''
          width 30px
          height 21px
          position absolute
          left -15px
          top 40px
          z-index 1
          background url("../images/steps/arrow.png") no-repeat 0 0
          @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
            background-image url("../images/steps/arrow@2x.png")
            background-size 100%
    .icon
      position relative
      width 100px
      height 100px
      margin 0 auto
      &:before
        content ''
        width 100px
        height 100px
        position absolute
        left 0
        top 0
        background url("../images/steps/bg.png") no-repeat 0 0
        @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
          background-image url("../images/steps/bg@2x.png")
          background-size 100%
    &:nth-child(1) .icon:after
      content ''
      position absolute
      left 50%
      top 50%
      width 52px
      height 50px
      margin-left -(@width/2)
      margin-top -(@height/2)
      background url("../images/steps/1.png") no-repeat 0 0
      @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
        background-image url("../images/steps/1@2x.png")
        background-size 100%
    &:nth-child(2) .icon:after
      content ''
      position absolute
      left 50%
      top 50%
      width 50px
      height 50px
      margin-left -(@width/2)
      margin-top -(@height/2)
      background url("../images/steps/2.png") no-repeat 0 0
      @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
        background-image url("../images/steps/2@2x.png")
        background-size 100%
    &:nth-child(3) .icon:after
      content ''
      position absolute
      left 50%
      top 50%
      width 57px
      height 35px
      margin-left -(@width/2)
      margin-top -(@height/2)
      background url("../images/steps/3.png") no-repeat 0 0
      @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
        background-image url("../images/steps/3@2x.png")
        background-size 100%
    &:nth-child(4) .icon:after
      content ''
      position absolute
      left 50%
      top 50%
      width 51px
      height 48px
      margin-left -(@width/2)
      margin-top -(@height/2)
      background url("../images/steps/4.png") no-repeat 0 0
      @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
        background-image url("../images/steps/4@2x.png")
        background-size 100%
    &:nth-child(5) .icon:after
      content ''
      position absolute
      left 50%
      top 50%
      width 68px
      height 44px
      margin-left -(@width/2)
      margin-top -(@height/2)
      background url("../images/steps/5.png") no-repeat 0 0
      @media  only screen and (-webkit-min-device-pixel-ratio: 1.3), only screen and (-o-min-device-pixel-ratio: 13/10), only screen and (min-resolution: 120dpi)
        background-image url("../images/steps/5@2x.png")
        background-size 100%
    .title
      font-size 14px
      font-weight bold
      text-transform uppercase
      margin-top 10px
      margin-bottom 20px
      padding 0 10px
form.m_find-project-form
  anim()
  background #fff
  box-shadow 0 10px 29px rgba(0,0,0,.2)
  padding-left 30px
  padding-right 30px
  padding-top 15px
  padding-bottom 10px
  text-align left
  @media MD
    clearfix()
  &:hover
    box-shadow 0 10px 39px rgba(0,0,0,.4)
  .form-title
    padding-bottom 10px
    text-align center
    @media MD
      padding-bottom 30px
    h2
      font-size 25px
      font-weight bold
      @media MD
        font-size 30px
  .form-column
    @media MD
      float left
      width 23.5%
    & + .form-column
      margin-top 15px
      @media MD
        margin-top 0
        margin-left 2%
    label
      display block
      color #494846
      font-size 14px
      margin-bottom 5px
    .remark
      font-size 12px
      color #494846
      font-style italic
      padding-top 10px
    .submit
      border none
      width 100%
      padding 5px 10px
      margin-top -20px
      @media MD
        margin-top 0
        height 30px
    .price-inputs
      clearfix()
      input
        float left
        width 48%
        font-size 14px
        border 1px solid #c8c8c8
        border-radius 4px
        height 30px
        padding 0 5px
        &:focus
          border-color $green
        &:last-child
          margin-left 4%
    .price-range
      height 50px
      padding-top 30px
      padding-left 10px
      padding-right 10px
      .noUi-value
        font-size 10px
        color #999
        width 80px
        top -25px
        transform none
        text-align left
        &:last-child
          text-align right
          left auto !important
          right 0 !important
      .noUi-marker-horizontal.noUi-marker
        height 8px
        top -6px
        width 2px
        background #c8c8c8
      .noUi-horizontal
        height 4px
        border-radius 0
        box-shadow none
        background #c8c8c8
        border none
      .noUi-connect
        background $blue
        box-shadow none
      .noUi-handle
        width 20px
        height 20px
        border-radius 50%
        border 3px solid #a2d100
        top -8px
        left -10px
        &:after,
        &:before
          display none
        &:hover
          cursor pointer
        &.noUi-active
          border-color $green
          cursor pointer
  
  .select2-container .select2-selection--single
    height 30px
    border-width 1px
  .select2-container--default .select2-selection--single .select2-selection__rendered
    line-height 28px
    text-transform none
    font-weight normal
  .select2-container--default .select2-selection--single .select2-selection__arrow
    height 28px
    width 28px
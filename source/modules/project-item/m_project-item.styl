.m_project-item
  position relative
  height 275px
  @media LG
    height 340px
  &:hover
    .image
      box-shadow inset 0 -300px 150px -50px rgba(0,0,0,.45)
  .image
    anim()
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-repeat no-repeat
    background-position 50%
    background-size cover
    box-shadow inset 0 -300px 150px -50px rgba(0,0,0,.75)
  .bottom
    position absolute
    left 0
    bottom 0
    width 100%
    padding 30px
    color #fff
    .title
      margin-bottom 10px
      a
        color #fff
        font-size 30px
        line-height 0.6
        text-shadow 1px 1px 0 rgba(0,0,0,.25)
        @media LG
          font-size 36px
    .desc
      font-size 14px
      line-height 20px
      margin-bottom 10px
      @media LG
        font-size 16px
        line-height 24px
